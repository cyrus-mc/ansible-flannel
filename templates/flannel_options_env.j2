FLANNELD_IFACE={{ ansible_eth0.ipv4.address }}
FLANNELD_ETCD_ENDPOINTS={{ static_node | join(',') }}
FLANNELD_ETCD_ENDPOINTS=http://{{ ansible_local.k8s_facts.etcd_elb }}:2379
